<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="./bootstrap.php"
        >
    <testsuites>
        <testsuite name="EddieJaoude\Zf2Logger">
            <directory>./Zf2LoggerTest</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="./build/coverage" title="EddieJaoude\Zf2Logger"
             charset="UTF-8" yui="true" highlight="true"
             lowUpperBound="35" highLowerBound="90"/>
        <log type="coverage-xml" target="./build/logs/coverage.xml"/>
        <log type="coverage-clover" target="./build/logs/clover.xml"/>
        <log type="junit" target="./build/logs/phpunit.xml" logIncompleteSkipped="false"/>
        <log type="testdox-text" target="./build/logs/testdox.txt"/>
    </logging>
</phpunit>